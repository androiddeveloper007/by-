<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_p20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/myBusinessCardLayout"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/business_card_bg">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/card_logo" />

                <ImageView
                    android:id="@+id/recommendDoctorTipImg"
                    android:layout_width="116dp"
                    android:layout_height="114.7dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/recomment_doctor_tip" />

                <com.bowen.commonlib.widget.CircleImageView
                    android:id="@+id/doctorCardIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/doctor_default" />

                <TextView
                    android:id="@+id/doctorCardNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorCardIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:text=""
                    android:textColor="@color/color_main_black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/doctorCardMiddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorCardNameTv"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doctorCardDepartmentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="3dp"
                        android:text=""
                        android:textColor="#a4a4a4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/doctorCardLevelTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="3dp"
                        android:text=""
                        android:textColor="#a4a4a4"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/doctorCardHospitalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorCardMiddle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="济风堂国医馆"
                    android:textColor="#a4a4a4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/doctorCardTelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorCardMiddle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="50dp"
                    android:drawableLeft="@drawable/card_call"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="0755-5422676"
                    android:textColor="@color/color_main"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/doctorCardAddressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorCardTelTv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/location_grey"
                    android:gravity="center_vertical"
                    android:text="广东省深圳市福田区金田路4036号"
                    android:textColor="#a4a4a4"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/doctorCardAddressTv"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="25dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#667F98FB" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/icLauncher"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="24dp"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/slogan0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="7dp"
                            android:layout_toRightOf="@+id/icLauncher"
                            android:gravity="center"
                            android:text="博医在线"
                            android:textColor="@color/color_main_gray"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/slogan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/slogan0"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/icLauncher"
                            android:gravity="center"
                            android:text="优选中医，精准诊疗"
                            android:textColor="@color/color_main_gray"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mTipsQRcodeImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/img_bg" />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/mCloseImg"
            android:layout_width="18.33dp"
            android:layout_height="18.33dp"
            android:layout_alignRight="@+id/myBusinessCardLayout"
            android:background="@drawable/icon_close" />

        <TextView
            android:id="@+id/mShareBtn"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_below="@+id/myBusinessCardLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:background="@drawable/button_main"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/color_white"
            android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>