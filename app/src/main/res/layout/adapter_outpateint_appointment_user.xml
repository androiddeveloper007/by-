<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.bowen.commonlib.widget.CircleImageView
        android:id="@+id/mHeadPortraitImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/mUserNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mHeadPortraitImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="用户1号"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/mPeroidTimeTv"
        android:layout_below="@+id/mUserNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mHeadPortraitImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="预约时段 9:00-9:30"
        android:textSize="12sp"
        android:textColor="#b8b8b8"/>

    <TextView
        android:id="@+id/mTreatmentStatusTv"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="已就诊"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:background="@drawable/button_submit"
        />

</RelativeLayout>
