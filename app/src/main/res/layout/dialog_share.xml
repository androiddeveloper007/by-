<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_00"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="283.3dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corner_affirm_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mMainTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19.1dp"
            android:text="分享到"
            android:textColor="@color/color_main_black"
            android:textSize="19.1sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="22dp">

            <LinearLayout
                android:id="@+id/mSharWechatLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mShareWechatImg"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/share_wechat" />

                <TextView
                    android:id="@+id/mShareWechatTv"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="微 信"
                    android:textColor="@color/color_main_black"
                    android:textSize="13.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mShareWechatCircleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39.7dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mShareWechatCircleImg"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/share_wechat_circle" />

                <TextView
                    android:id="@+id/mShareWechatCircleTv"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="朋友圈"
                    android:textColor="@color/color_main_black"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/mShareWeiboLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mShareWeiboImg"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/share_weibo" />

                <TextView
                    android:id="@+id/mShareWeiboTv"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="微 博"
                    android:textColor="@color/color_main_black"
                    android:textSize="13.5sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mShareQQLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39.7dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shareQQImg"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/share_qq" />

                <TextView
                    android:id="@+id/shareQQTv"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_horizontal"
                    android:text="QQ"
                    android:textColor="@color/color_main_black"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>