<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    android:orientation="vertical">

    <com.bowen.commonlib.widget.ActionTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleViewVisible="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<android.support.v7.widget.CardView
                android:layout_width="330dp"
                android:layout_height="381.2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="4dp"
                app:cardMaxElevation="10dp"
                app:cardElevation="5dp">
-->
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="381.2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/business_card_bg">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="26dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/card_logo" />

                    <ImageView
                        android:id="@+id/recommendDoctorTipImg"
                        android:layout_width="116dp"
                        android:layout_height="114.7dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/recomment_doctor_tip" />

                    <com.bowen.commonlib.widget.CircleImageView
                        android:id="@+id/doctorCardIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/doctor_default" />

                    <TextView
                        android:id="@+id/doctorCardNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="江医生"
                        android:textColor="@color/color_main_black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/doctorCardMiddle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardNameTv"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/doctorCardDepartmentTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/doctorCardIcon"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="3dp"
                            android:text="呼吸内科"
                            android:textColor="#a4a4a4"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/doctorCardLevelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/doctorCardIcon"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="3dp"
                            android:text="主任医师"
                            android:textColor="#a4a4a4"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/doctorCardHospitalTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardMiddle"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:text="济风堂国医馆"
                        android:textColor="#a4a4a4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/doctorCardTelTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardMiddle"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="50dp"
                        android:drawableLeft="@drawable/card_call"
                        android:gravity="center_vertical"
                        android:text="0755-5422676"
                        android:textColor="@color/color_main"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/doctorCardAddressTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doctorCardTelTv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@drawable/location_grey"
                        android:gravity="center_vertical"
                        android:text="广东省深圳市福田区金田路4036号"
                        android:textColor="#a4a4a4"
                        android:textSize="12sp" />

                </RelativeLayout>
            <!--</android.support.v7.widget.CardView>-->

        </LinearLayout>

            <TextView
                android:id="@+id/sendCardBtn"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_main"
                android:gravity="center"
                android:text="发送名片"
                android:textColor="@color/color_white"
                android:textSize="17sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
