<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.bowen.commonlib.widget.ActionTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleViewVisible="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/tuwenzixunLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/picture_word_comment"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="图文资讯"
            android:textColor="@color/color_main_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/arrow_right" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/menzhenyuyueLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/outpatient_appointment"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="门诊预约"
            android:textColor="@color/color_main_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/arrow_right" />


    </android.support.v7.widget.CardView>


</LinearLayout>
