<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="73dp"
    android:layout_height="102dp"
    android:background="@color/color_00"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="95dp"
        android:layout_marginTop="5dp">

        <com.bowen.commonlib.widget.CircleImageView
            android:id="@+id/mPhotoImg"
            android:layout_width="68dp"
            android:layout_height="95dp"
            android:scaleType="centerCrop"
            app:image_radius="4dp"
            app:image_type="round" />

        <ImageView
            android:id="@+id/addImg"
            android:layout_width="27.33dp"
            android:layout_height="27.33dp"
            android:layout_centerInParent="true"
            android:background="@drawable/add"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mDeleteImg"
        android:layout_width="14.7dp"
        android:layout_height="14.7dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/delete" />
</RelativeLayout>
