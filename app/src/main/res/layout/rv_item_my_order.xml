<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/orderNumTitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="订单号"
            android:textColor="#a4a4a4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/orderNumTv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/orderNumTitle"
            android:gravity="center_vertical"
            android:text="45678567856784"
            android:textColor="#253231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/orderStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="已支付"
            android:textColor="#14C251"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/orderStatusTv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#efefef" />

        <TextView
            android:id="@+id/orderTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderStatusTv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:drawableLeft="@drawable/picture_word_comment"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="图文资讯"
            android:textColor="#253231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/orderFeeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/orderStatusTv"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:text="￥50.00"
            android:textColor="#f22727"
            android:textSize="15sp" />

        <com.bowen.commonlib.widget.CircleImageView
            android:id="@+id/doctorImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/orderTypeTv"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/doctorNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderTypeTv"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/doctorImg"
            android:gravity="center_vertical"
            android:text="林西"
            android:textColor="#253231"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#efefef" />

        <TextView
            android:id="@+id/orderHasPayTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="已支付:"
            android:textColor="#a4a4a4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/orderHasPayTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/doctorImg"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/orderHasPayTitle"
            android:gravity="center_vertical"
            android:text="￥50.00"
            android:textColor="@color/color_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/orderPassAwayTv"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/doctorImg"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_submit"
            android:gravity="center"
            android:text="应答"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>